<!DOCTYPE html>
<html>
<head>
  <title>TrackerApp</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<% content_for :header do %>
	<div id="bg">
		<div id="header">
			<div id="logo-area">
				<img src="images/logo.png"/>
				<p class="quote"> "Track or be tracked, but do it with TrackerApp." </p>
			</div>
			<div id="search-area">
				<form action="index.html" method="post">
				    <div class="field">
					<input type="text" name="search" value="Search"></input>
				    </div>
			</div>
	  	</div>
		<div id="content">
			<%yield :content %> 	
		</div>	
	</div>
<% end %>

<%= yield :header %>
</body>
</html>
